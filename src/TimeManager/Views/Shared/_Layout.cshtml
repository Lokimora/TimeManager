@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/registration.css"/>
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <nav id="myNavbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                  
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Login" asp-action="Logoff">Выход</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Login" asp-action="Login">Вход</a></li>
                        <li><a asp-controller="Registration" asp-action="Registration">Регистрация</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>


<div>
    @RenderBody()
</div>
</body>
</html>
