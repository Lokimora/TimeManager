@model TimeManager.Model.LoginModel
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = "_Layout";
}

<div class="container margin-middle col-md-2 col-md-offset-5">
    <div class="custom-container">
        <div class="row">
            <form asp-controller="Login" asp-action="Login" method="POST">
                <div class="form-group">
                    <div class="col-md-10">
                        <label asp-for="Email">Ваше имя</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label for="Password">Пароль</label>
                        <input asp-for="Password" id="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                @if (ViewData.ModelState.ContainsKey("AuthError"))
                {
                    <span class="text-danger">@ViewData.ModelState["AuthError"].Errors.FirstOrDefault().ErrorMessage</span>
                }

                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

            </form>
        </div>
    </div>

</div>