@model TimeManager.Model.RegistrationModel
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = "_Layout";
}


<div class="container margin-middle col-md-2 col-md-offset-5">
    <div class="custom-container">
        <div class="row">
            <form asp-controller="Registration" asp-action="Registration" method="POST">
                <div class="form-group">
                    <div class="col-md-10">
                        <label asp-for="Name">Ваше имя</label>
                        <input asp-for="Name" class="form-control"/>                       
                        <span asp-validation-for="Name" class="text-danger"></span>
                       
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label for="Email">Почтовый адрес</label>
                        <input type="email" asp-for="Email" id="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger" ></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="password">Пароль</label>
                        <input type="password" asp-for="Password" id="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
              
               
                     <div class="col-md-10">
                         <button type="submit" class="btn btn-primary btn-block">Submit</button>
                
                </div>
                
            </form>
        </div>
    </div>

</div>
